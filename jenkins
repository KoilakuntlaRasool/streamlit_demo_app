pipeline {
        agent any
            stages {
                stage('Clone Repository') {
                /* Cloning the repository to our workspace */
                steps {
                checkout scm
                }
           }
           stage('Build Image') {
                steps {
                sh 'sudo docker build -t rahulkunder/salaryprediction:latest .'
                }
           }
           stage('Run Image') {
                steps {
                sh 'sudo docker run -d -p 8501:8501 --name rahulkunder/salaryprediction rahulkunder/salaryprediction:latest'
                }
           }
           stage('Testing'){
                steps {
                    echo 'Process Complete..'

                    }
           }
    }
}

